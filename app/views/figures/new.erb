<h2>Create a new figure:</h2>
<form action="/figures" method="post">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />

  <br />

  <label>Choose an existing title:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input>
  <% end %>

  <br />

  <label>and/or, create a new title:</label>
  <input type="text" name="title[name]" id="new_title" />

  <br />

  <label>Choose an existing landmark:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input>
  <% end %>

  <br />

  <label>and/or, create a new landmark:</label>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"/>
  <label>Year Completed:</label>
  <input type="number" name="landmark[year_completed]" id="year_completed" />

  <br />

  <input type="submit" value="Create New Figure" id="Submit" />
</form>
