<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>" placeholder="Name">
  <br>
  Titles: <br>
  <% @titles.each do |t| %>
    <input type="checkbox" value="<%= t.id %>" name="figure[title_ids][]" <%= 'checked' if @figure.titles.include? t %>>
      <%= t.name %>
    </input>
  <% end %>
  <br>
  <br>
  Landmarks:<br>
  <% @landmarks.each do |l| %>
    <input type="checkbox" value="<%= l.id %>"
    name="figure[landmark_ids][]"
    <%= 'checked' if @figure.landmarks.include? l %>>
      <%= l.name %>
    </input>
  <% end %>
  <br>
  <br>
  Or, you can add a new landmark:<br>
  <input type="text" name="new_landmark">
  <br>
  <input type="submit" value="Edit Figure" id="Edit Figure" name="Edit Figure">
</form>
