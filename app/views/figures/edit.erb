
<h2> Edit this Figure </h2>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH"><br>
  Figure Name: <input type="text" name="figure[name]" value="<%= @figure.name %>" id = "figure_name">
  <input type="submit" value="Edit Figure"> <br>

<br>
<p> Choose titles </p>
<% @titles.each do |title| %>
  <input type="checkbox" value="<%= title.id %>" id = "title_<%= title.id %>" name = "figure[title_ids][]" <%= "checked" if @figure.titles.include?(title) %> > <%= title.name %></input><br>
<% end %>
<p>New Title: <input type="text" id ="new_title" name = "title[name]" placeholder="New Title"></p>

<br>
<p> Choose landmarks </p>
<% @landmarks.each do |landmark| %>
  <input type="checkbox" value="<%= landmark.id %>" id = "landmark_<%= landmark.id %>" name = "figure[landmark_ids][]" <%= "checked" if @figure.landmarks.include?(landmark) %> > <%= landmark.name %></option><br>
<% end %>
<p>New Landmark: <input type="text" id ="new_landmark" name = "landmark[name]" placeholder="New Landmark"></p>

</form>

<form action="/figures/<%= @figure.id %>" method="post">
   <input type="hidden" name="_method" value="DELETE"><br>
  <input type="submit" value="Delete this Figure">
</form>
